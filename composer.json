{
  "name": "lancedesk/ai-content-studio",
  "description": "AI Content Studio WordPress plugin",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "giorgiosironi/eris": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "ACS\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "test": "phpunit --colors=always --testdox"
  }
}
